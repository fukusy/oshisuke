<div class="underlay-photo" >
  <div style='height: 500px;'>
    <div class="col-sm-12 col-md-12 col-lg-5 px-5 px-sm-0 mx-auto pt-5 text-center">
      <h3 class="admin-text">運営お問い合わせ</h3>
      <%= form_with model:@contact,url: contacts_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :お問い合わせタイトル %>
          <%= f.select :contact_title, Contact.contact_titles.keys.map { |k| [I18n.t("enums.contact.contact_title.#{k}"), k]},class: "prefecture-select" %>
        </div>
        <div class="form-group">
          <%= f.label :お問い合わせ内容 %>
          <%= f.text_field :contact_content, placeholder: "問い合わせ内容をご記入ください" %>
        </div>
        <div class="form-group">
          <%= f.submit "問い合わせ送信", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
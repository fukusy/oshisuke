<div class="box text-white comment-color">
    <div class="px-3 pt-3 pb-2">
        <!--<div class="mt-4">-->
            <h4 class="text-center">コメント投稿</h4>
        <!--</div>-->
        <%= form_with(model: [event, comment], local:true ) do |f| %>
          <div class="form-group">
           <label for="comment"></label>
              <%= f.text_area :comment_content, class: "form-control", rows: "5", placeholder: "コメントここに" %>
          </div>
          <div class="form-group">
            <%= f.submit '送信', class: "btn btn-secondary btn-block" %>
          </div>
        <% end %>
    </div>
</div>
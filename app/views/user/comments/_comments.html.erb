<h5>コメント表示</h5>
<table>
  <tbody>
    <% @event.comments.each do |comment| %>
      <tr>
        <td class="border">
          <%= comment.comment_content %>
          <div class="float-none">
            <div class="float-left">
              <%= link_to user_path(comment.user) do %>
                <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "35x35" %>
                <%= comment.user.name %>
              <% end %>
              <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
            </div>
            <div class="float-right">
              <% if comment.user == current_user %>
                <%= link_to '編集', edit_event_comment_path(comment.event, comment), class:"btn btn-sm btn-danger" %>
                <%= link_to '削除', event_comment_path(comment.event, comment),method: :delete, class:"btn btn-sm btn-danger" %>
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
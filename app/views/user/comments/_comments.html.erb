<h5>コメント表示</h5>
<table>
  <tbody>
    <tr>
      <% @event.comments.each do |comment| %>
      <td>
        <%= comment.comment_content %>
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "35x35" %>
          <%= comment.user.name %>
        <% end %>
        <%= l comment.created_at %>
        <% if comment.user == current_user %>
          <%= link_to 'Edit', edit_event_comments_path(comment.event, comment), class:"btn btn-sm" %>
          <%= link_to 'Destroy', event_comments_path(comment.event, comment),method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
        <% end %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
<div class="container-fluid px-5 px-sm-3 mt-4">
<h3 class="text-center"><%= @tag.name %>一覧<small>(全 <%= @tag.count %>件)</small></h3>


<div class="row">

    <div class="col-md-10">
    <div class="row">
    <% @tag_events.each do |tag| %>
         <div class="col-md-3">
            <div class="mx-auto mt-4">
              <div class="card-deck">
              <div class="card">
              <%= link_to tag.event_name,event_path(event.id) %>
               
              <div class="card-body">
                <p class="card-title">
                    <%= tag.event_content %>
                </p>
              </div>
            </div>
          </div>
          </div>
        </div>
    <% end %>
    </div>
    </div>
    <%= paginate @tag_events %>
</div>
</div>

<div class="container px-5 px-sm-3 mt-4">
    <h3 class="text-center"><%= @tag.tag_name %>一覧<small>(全<%= @tag_events.count %>件)</small></h3>
    <div class="row">
        <% @tag_events.each do |tag| %>
            <div class="col-md-12 border mb-2 mt-3">
                <div class="mt-2">
                    <div class="float-none d-flex align-items-end align-bottom">
                        <div class="float-left mt-2">
                            <h4><%= link_to tag.event.event_name, event_path(tag.event.id) %></h4>
                        </div>
                        <div class="float-left">
                            　作成者:
                            <%= link_to user_path(tag.event.user.id) do %>
                            <%= attachment_image_tag tag.event.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "35x35", class: "rounded-circle" %>
                            <%= tag.event.user.name %>
                            <% end %>
                        </div>
                        <div class="text-right ml-3">
                            <% tag.event.tags.each do |tag| %>
                                <%= link_to tag.tag_name,tag_path(tag.id), class: "btn btn-info btn-sm" %>
                            <% end %>
                        </div>
                    </div>
                    <div class="border-bottom float-none d-flex align-items-end align-bottom">
                        <div class="float-left mb-1">
                            <small>イベント日/<%= l tag.event.event_date %>　イベント時間/<%= l tag.event.event_time %></small>
                        </div>
                    </div>
                    <div class="float-left ml-2 mt-1 mb-2">
                        <%= tag.event.event_content %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
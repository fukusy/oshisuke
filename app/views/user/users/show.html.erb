<div class="container">
  <div class="row">
    <div class="col-12">
      
      <div class="col-12">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %>
          </div>
          <div class="col-10">
            <%= @user.name %></br>
            <%= @user.introduction %>
              <div>
                <% unless @user != current_user  %>
                  <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary" do %>
                    <i class="fas fa-user-cog">プロフィール編集</i>
                  <% end %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
      <h3 class="my-3">参加イベント一覧</h3>
      <%= month_calendar events:@user_events do |date, event| %>
        <%= date.day %>
        <% event.each do |event| %>
        <div>
          <%= link_to event.event_name, event_path(event.id) %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">


  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">

      <h2 class="text-center">プロフィール編集</h2>
      <div id="error_explanation">
      <% if @user.errors.any? %>
            <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
            <ul><% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
        </div>
          <%= form_with model:@user, local:true do |f| %>

        <div class="form_group">
          <label for="inputName">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", :class => 'form-control name' %>
        </div>

          <% attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

        <div class="form_group mt-2">
          <label for="inputImage">アイコン</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", :class => "form-control-file user_image" %>
        </div>


        <div class="form_group mt-2">
          <label for="inputIntroduction">プロフィール詳細</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"説明", :class => "form-control introduction" %>
        </div>


        <div class="form-group mt-3">
          <%= f.submit '変更を保存する', class:"btn btn-secondary" %>
        </div>


      <% end %>

    </div>
  </div>
  </div>
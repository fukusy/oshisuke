<div class="underlay-photo" >
  <div style='height: 500px;'>
    <div class="col-sm-12 col-md-12 col-lg-5 px-5 px-sm-0 mx-auto pt-5 text-center">
      <h4 class="admin-text">新規登録</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "user/shared/error_messages", resource: resource %>

          <div class="field mt-3">
            <%= f.label :name, "名前" %></br>
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field mt-1">
            <%= f.label :email,"メールアドレス" %></br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field mt-1">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <small>(英数<%= @minimum_password_length %>文字以上 )</small>
            <% end %></br>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field mt-1">
            <%= f.label :password_confirmation, "パスワード確認" %></br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field text-center mt-3">
            <%= f.check_box :use_rules ,{},checked_value = "true",unchecked_value = "false" %>
            <%= f.label '利用規約に同意する' %>
            </br>
            <small>本サイトは、アイコンなどを変更するために画像アップロードすることが可能ですが、著作権や肖像権を侵害する内容は禁止します。</small>
          </div>
          <div style="height:10px"></div>

          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-outline-dark w-50" %>
          </div>
        <% end %>

        <%= render "user/shared/links" %>
    </div>
  </div>
</div>

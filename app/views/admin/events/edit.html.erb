<div class="container">
  <div class="row">
    <div class="col-8">
      <h3 class="my-3">イベント編集</h3>
      <%= form_with model:@event,url: admin_event_path(@event.id), local:true do |f| %>
        <div class="form-group">
          <%= f.label :イベント名 %>
          <%= f.text_field :event_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :イベント内容 %>
          <%= f.text_field :event_content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :年月日 %>
          <%= f.date_field :event_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :時間 %>
          <%= f.time_field :event_time, class: 'form-control' %>
        </div>
        <div class="form-group relationship_genres-field">
          <%= f.label "タグ" %>
          </br>
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name,{ checked: @event.tag_ids.map(&:to_param) }) do |tag| %>
            <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
            <% end %>
          <% end %>

        </div>


        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>


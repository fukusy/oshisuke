<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-5 px-5 px-sm-0 mx-auto pt-5 text-center">
      <h3 class="my-3 text-center">タグ一覧・追加</h3>
      <%= form_with model:@new_tag,url: admin_tags_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :タグ名 %>
          <%= f.text_field :tag_name, placeholder: "タグ名" %>
          <%= f.submit "新規登録", class: 'ml-2 btn btn-success' %>
        </div>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>タグ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.tag_name %></td>
            <td><%= link_to '編集する', edit_admin_tag_path(tag.id), class: "btn btn-secondary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>